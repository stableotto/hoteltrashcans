  {
    name: "Hotel Logo 1",
    image: "https://pub-2fa7464bdf334fa9832ed14fe5565b2e.r2.dev/hotellogos/hotel1.png",
    alt: "Premium hotel partner logo"
  },
  {
    name: "Hotel Logo 2",
    image: "https://pub-2fa7464bdf334fa9832ed14fe5565b2e.r2.dev/hotellogos/hotel2.png",
    alt: "Luxury hotel partner logo"
  },
  {
    name: "Hotel Logo 3",
    image: "https://pub-2fa7464bdf334fa9832ed14fe5565b2e.r2.dev/hotellogos/hotel3.png",
